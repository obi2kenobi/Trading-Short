// PLOTS
// ═══════════════════════════════════════════════════════════════════════════════

// TEMA 200 HTF
plot(showBearFilter ? tema200_htf : na, "TEMA 200 HTF", color=isBearMarket ? color.new(color.red, 40) : color.new(color.green, 40), linewidth=3)

// TEMA lines
plot(tema_in, "TEMA IN", color=color.new(color.purple, 0), linewidth=2)
plot(tema_out, "TEMA OUT", color=color.new(color.blue, 50), linewidth=1, style=plot.style_circles)

// Supertrend
plot(trend_in==-1 ? _dn_in : na, "ST Dn", color=color.new(color.red, 0), linewidth=2, style=plot.style_linebr)
plot(trend_in==1 ? _up_in : na, "ST Up", color=color.new(color.green, 0), linewidth=2, style=plot.style_linebr)

// Background
bgcolor(showPanicZones and isPanicMode ? color.new(color.orange, 85) : na, title="Panic Zone")
bgcolor(isBearMarket ? color.new(color.red, 97) : color.new(color.green, 97), title="Bear/Bull")
bgcolor(inShort ? color.new(color.red, 92) : na, title="In Position")

// SL/TP levels
plot(showLevels and inShort ? stopPrice : na, "Stop Loss", color=color.new(color.red, 0), linewidth=2, style=plot.style_cross)
plot(showLevels and inShort ? tp1Price : na, "TP1", color=color.new(color.lime, 60), linewidth=1, style=plot.style_circles)
plot(showLevels and inShort ? tp2Price : na, "TP2", color=color.new(color.lime, 40), linewidth=1, style=plot.style_circles)
plot(showLevels and inShort ? tp3Price : na, "TP3", color=color.new(color.green, 0), linewidth=2, style=plot.style_cross)
plot(showLevels and inShort ? entryPrice : na, "Entry", color=color.new(color.white, 0), linewidth=1, style=plot.style_circles)

// Entry signals
plotshape(shortStandard and not inShort and not shortPanic, "SHORT STD", shape.triangledown, location.abovebar, color.new(color.red, 0), size=size.normal)
plotshape(shortPanic and not inShort, "SHORT PANIC", shape.triangledown, location.abovebar, color.new(color.orange, 0), size=size.large)

// Exit signals
plotshape(exit_bar and not emergencyExit, "COVER", shape.triangleup, location.belowbar, color.new(color.lime, 0), size=size.normal)
plotshape(emergencyExit, "EMERGENCY", shape.xcross, location.belowbar, color.new(color.yellow, 0), size=size.large)

// Panic indicators
plotshape(showPanicZones and isPanicBar and not inShort, "Panic Bar", shape.circle, location.belowbar, color.new(color.orange, 0), size=size.tiny)
plotshape(showPanicZones and isVolSpike, "Vol Spike", shape.diamond, location.abovebar, color.new(color.purple, 0), size=size.tiny)

// ═══════════════════════════════════════════════════════════════════════════════
// LABELS
// ═══════════════════════════════════════════════════════════════════════════════

// Calcolo offset per labels
labelOffset = atr14 * labelOffsetATR

// Dimensione label dinamica
lblSize = labelSize == "tiny" ? size.tiny : (labelSize == "small" ? size.small : size.normal)

if showLabels
    // Entry label (sopra le candele con offset)
    if shortOK and not inShort
        modeText = shortPanic ? "PANIC" : (isBearMarket ? "BEAR" : "STD")
        labelColor = shortPanic ? color.orange : color.red

        // Testo compatto o completo
        entryText = compactLabels ?
             "SHORT " + modeText + "\n" + str.tostring(close_tf, "#.##") :
             "SHORT " + modeText + "\nEntry: " + str.tostring(close_tf, "#.##") +
                  "\nSL: " + str.tostring(stopPrice, "#.##") +
                  "\nTP3: " + str.tostring(tp3Price, "#.##")

        label.new(bar_index, high_tf + labelOffset,
             text=entryText,
             style=label.style_label_down,
             color=labelColor,
             textcolor=color.white,
             size=lblSize)

    // Exit label (sotto le candele con offset)
    if exit_bar
        profitPct = ((entryPrice - close_tf) / entryPrice) * 100
        profitColor = profitPct > 0 ? color.green : color.red
        exitType = emergencyExit ? "EXIT!" : "Cover"

        // Testo compatto o completo
        exitText = compactLabels ?
             exitType + " " + str.tostring(profitPct, "#.#") + "%" :
             exitType + "\n" + str.tostring(close_tf, "#.##") +
                  "\nP&L: " + str.tostring(profitPct, "#.##") + "%"

        label.new(bar_index, low_tf - labelOffset,
             text=exitText,
             style=label.style_label_up,
             color=profitColor,
             textcolor=color.white,
             size=lblSize)

// TP hit labels - solo se non compatte
if showLabels and not compactLabels and inShort
    if tp1_hit and not tp1_hit[1]
        label.new(bar_index, low_tf - labelOffset * 0.5,
             text="TP1",
             style=label.style_label_up,
             color=color.new(color.green, 30),
             textcolor=color.white,
             size=size.tiny)
    if tp2_hit and not tp2_hit[1]
        label.new(bar_index, low_tf - labelOffset * 0.5,
             text="TP2",
             style=label.style_label_up,
             color=color.new(color.green, 20),
             textcolor=color.white,
             size=size.tiny)

// ═══════════════════════════════════════════════════════════════════════════════
// DASHBOARD
// ═══════════════════════════════════════════════════════════════════════════════

if showDashboard
    var table dashboard = table.new(position.bottom_right, 3, 16, bgcolor=color.new(color.black, 85), border_width=1)

    // Colori sezione
    hdrBg     = color.new(color.purple, 50)
    sectMkt   = color.new(#1a1a2e, 0)
    sectRisk  = color.new(#1a1a1a, 0)
    sectPos   = color.new(#0d1b2a, 0)
    rowBg     = color.new(color.black, 90)

    // ── HEADER ──
    tfLabel = tf == "60" ? "1H" : (tf == "120" ? "2H" : (is4H ? "4H" : (isDaily ? "1D" : tf)))
    statusDot = inShort ? "SHORT" : (shortOK ? "READY" : "IDLE")
    statusCol = inShort ? color.red : (shortOK ? color.lime : color.gray)
    table.cell(dashboard, 0, 0, "PANIC HUNTER", text_color=color.white, text_size=size.normal, bgcolor=hdrBg)
    table.cell(dashboard, 1, 0, "v3.1", text_color=color.new(color.white, 30), text_size=size.normal, bgcolor=hdrBg)
    table.cell(dashboard, 2, 0, tfLabel + " " + statusDot, text_color=statusCol, text_size=size.normal, bgcolor=hdrBg)

    // ── STATUS BAR: filtri rapidi con indicatori ──
    fBear = bearOK ? "B" : "b"
    fVol  = volOK ? "V" : "v"
    fLat  = latOK ? "L" : "l"
    fSess = sessionOK ? "S" : "s"
    fDD   = drawdownOK ? "D" : "d"
    fCool = cooldownOK ? "C" : "c"
    filterBar = fBear + " " + fVol + " " + fLat + " " + fSess + " " + fDD + " " + fCool
    allFiltersOK = bearOK and volOK and latOK and sessionOK and drawdownOK and cooldownOK
    table.cell(dashboard, 0, 1, "Filtri", text_color=color.gray, text_size=size.tiny, bgcolor=sectMkt)
    table.cell(dashboard, 1, 1, filterBar, text_color=allFiltersOK ? color.lime : color.orange, text_size=size.small, bgcolor=sectMkt)
    table.cell(dashboard, 2, 1, allFiltersOK ? "ALL OK" : "BLOCK", text_color=allFiltersOK ? color.lime : color.red, text_size=size.tiny, bgcolor=sectMkt)

    // ── SEZIONE MERCATO ──
    table.cell(dashboard, 0, 2, "MERCATO", text_color=color.white, text_size=size.tiny, bgcolor=sectMkt)
    table.cell(dashboard, 1, 2, "", bgcolor=sectMkt)
    table.cell(dashboard, 2, 2, "", bgcolor=sectMkt)

    // Market + Trend (combinati su una riga)
    marketStatus = isStrongBear ? "STRONG BEAR" : (isBearMarket ? "BEAR" : "BULL")
    marketColor = isStrongBear ? color.red : (isBearMarket ? color.orange : color.green)
    trendText = trend_in == -1 ? "DOWN" : "UP"
    trendColor = trend_in == -1 ? color.red : color.green
    table.cell(dashboard, 0, 3, "Regime", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
    table.cell(dashboard, 1, 3, marketStatus, text_color=marketColor, text_size=size.small, bgcolor=rowBg)
    table.cell(dashboard, 2, 3, "ST: " + trendText, text_color=trendColor, text_size=size.small, bgcolor=rowBg)

    // Fear + Panic (combinati)
    fearColor = fearIndex > 50 ? color.red : (fearIndex > 30 ? color.orange : color.green)
    panicColor = panicScore >= 40 ? color.red : (panicScore >= 25 ? color.orange : color.gray)
    modeText = isPanicMode ? "PANIC!" : ""
    table.cell(dashboard, 0, 4, "Fear/Panic", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
    table.cell(dashboard, 1, 4, str.tostring(fearIndex, "#.#") + "%", text_color=fearColor, text_size=size.small, bgcolor=rowBg)
    table.cell(dashboard, 2, 4, str.tostring(panicScore) + "/100 " + modeText, text_color=panicColor, text_size=size.small, bgcolor=rowBg)

    // RSI + Volume (combinati)
    rsiColor = rsi < 30 ? color.green : (rsi > 70 ? color.red : color.white)
    volText = isVolSpike ? "SPIKE!" : (highVolume ? "HIGH" : "LOW")
    volColor = isVolSpike ? color.orange : (highVolume ? color.green : color.gray)
    table.cell(dashboard, 0, 5, "RSI / Vol", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
    table.cell(dashboard, 1, 5, str.tostring(rsi, "#.#"), text_color=rsiColor, text_size=size.small, bgcolor=rowBg)
    table.cell(dashboard, 2, 5, volText, text_color=volColor, text_size=size.small, bgcolor=rowBg)

    // WT + TEMA + Direction Score (combinati)
    wtText = wtDown ? "BEAR" : "BULL"
    wtColor = wtDown ? color.red : color.green
    temaText = isTemaFalling ? "FALL" : "RISE"
    temaColor = isTemaFalling ? color.red : color.green
    dirScoreColor = dirScore >= 2 ? color.green : (dirScore >= 1 ? color.orange : color.red)
    table.cell(dashboard, 0, 6, "WT / TEMA", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
    table.cell(dashboard, 1, 6, wtText + " / " + temaText, text_color=dirScore >= 2 ? color.green : color.orange, text_size=size.small, bgcolor=rowBg)
    table.cell(dashboard, 2, 6, "Dir " + str.tostring(dirScore) + "/3", text_color=dirScoreColor, text_size=size.small, bgcolor=rowBg)

    // ── SEZIONE RISK ──
    ddBg = not drawdownOK ? color.new(color.red, 70) : (dailyDrawdown > maxDailyDrawdown * 0.7 ? color.new(color.orange, 80) : sectRisk)
    table.cell(dashboard, 0, 7, "RISK", text_color=color.white, text_size=size.tiny, bgcolor=sectRisk)
    table.cell(dashboard, 1, 7, "", bgcolor=sectRisk)
    table.cell(dashboard, 2, 7, "", bgcolor=sectRisk)

    // Drawdown riga unica: daily | total | losses
    ddText = not drawdownOK ? "BLOCKED" : "OK"
    ddColor = not drawdownOK ? color.red : color.green
    table.cell(dashboard, 0, 8, "DD Day/Tot", text_color=color.gray, text_size=size.tiny, bgcolor=ddBg)
    table.cell(dashboard, 1, 8, str.tostring(dailyDrawdown * 100, "#.#") + "% / " + str.tostring(totalDrawdown * 100, "#.#") + "%", text_color=dailyDrawdown > maxDailyDrawdown * 0.5 ? color.orange : color.white, text_size=size.small, bgcolor=ddBg)
    table.cell(dashboard, 2, 8, ddText, text_color=ddColor, text_size=size.small, bgcolor=ddBg)

    // Consecutive losses + Cooldown + Auto-reset timer
    cooldownText = cooldownOK ? "OK" : str.tostring(math.max(0, smartCooldown - barsSinceExit)) + " bars"
    cooldownColor = cooldownOK ? color.green : color.orange
    // Se bloccato per loss consecutive, mostra timer reset
    lossText = str.tostring(consecutiveLosses) + "/" + str.tostring(maxConsecutiveLosses) + " loss"
    resetBarsLeft = consecutiveLosses >= maxConsecutiveLosses ? math.max(0, 20 - lossBlockBars) : 0
    resetText = resetBarsLeft > 0 ? " RST:" + str.tostring(resetBarsLeft) : ""
    table.cell(dashboard, 0, 9, "Loss/Cool", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
    table.cell(dashboard, 1, 9, lossText + resetText, text_color=consecutiveLosses >= maxConsecutiveLosses ? color.red : (consecutiveLosses >= maxConsecutiveLosses - 1 ? color.orange : color.white), text_size=size.small, bgcolor=rowBg)
    table.cell(dashboard, 2, 9, cooldownText, text_color=cooldownColor, text_size=size.small, bgcolor=rowBg)

    // Session (solo su 4H)
    if is4H
        sessText = inActiveSession ? "ACTIVE" : "PAUSED"
        sessColor = inActiveSession ? color.green : color.orange
        table.cell(dashboard, 0, 10, "Session", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 1, 10, str.tostring(sessionStart) + "-" + str.tostring(sessionEnd) + " UTC", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 2, 10, sessText, text_color=sessColor, text_size=size.small, bgcolor=rowBg)

    // ── SEZIONE POSIZIONE / SEGNALI ──
    posHdrBg = inShort ? color.new(color.red, 60) : color.new(color.teal, 70)
    posHdrText = inShort ? "POSIZIONE SHORT" : "IN ATTESA"
    table.cell(dashboard, 0, 11, posHdrText, text_color=color.white, text_size=size.tiny, bgcolor=posHdrBg)
    table.cell(dashboard, 1, 11, "", bgcolor=posHdrBg)
    table.cell(dashboard, 2, 11, "", bgcolor=posHdrBg)

    if inShort
        // Entry + P&L
        pnlColor = currentProfit > 0 ? color.green : color.red
        pnlBg = currentProfit > tp1_perc ? color.new(color.green, 85) : (currentProfit < -adaptedStopNormal * 0.5 ? color.new(color.red, 85) : rowBg)
        table.cell(dashboard, 0, 12, "Entry", text_color=color.gray, text_size=size.tiny, bgcolor=pnlBg)
        table.cell(dashboard, 1, 12, str.tostring(entryPrice, "#.##"), text_color=color.white, text_size=size.small, bgcolor=pnlBg)
        table.cell(dashboard, 2, 12, str.tostring(currentProfit * 100, "#.##") + "%", text_color=pnlColor, text_size=size.small, bgcolor=pnlBg)

        // SL + TP status
        tpStatus = tp2_hit ? "TP2 HIT" : (tp1_hit ? "TP1 HIT" : "RUNNING")
        tpStatusColor = tp2_hit ? color.green : (tp1_hit ? color.lime : color.white)
        table.cell(dashboard, 0, 13, "SL / TP", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 1, 13, str.tostring(stopPrice, "#.##"), text_color=color.red, text_size=size.small, bgcolor=rowBg)
        table.cell(dashboard, 2, 13, tpStatus, text_color=tpStatusColor, text_size=size.small, bgcolor=rowBg)

        // Exit score con barra visiva
        exitPct = exitThreshold > 0 ? math.min(exitScore / exitThreshold * 100, 100) : 0
        exitBarText = exitScore >= exitThreshold ? "EXIT!" : str.tostring(exitScore, "#.#") + "/" + str.tostring(exitThreshold, "#.#")
        exitBg = exitScore >= exitThreshold ? color.new(color.orange, 70) : rowBg
        table.cell(dashboard, 0, 14, "Exit Score", text_color=color.gray, text_size=size.tiny, bgcolor=exitBg)
        table.cell(dashboard, 1, 14, exitBarText, text_color=exitScore >= exitThreshold ? color.orange : color.white, text_size=size.small, bgcolor=exitBg)
        table.cell(dashboard, 2, 14, str.tostring(exitPct, "#") + "%", text_color=exitScore >= exitThreshold * 0.7 ? color.orange : color.gray, text_size=size.small, bgcolor=exitBg)

        // TP levels
        table.cell(dashboard, 0, 15, "TP Levels", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 1, 15, str.tostring(tp1Price, "#.#") + " / " + str.tostring(tp2Price, "#.#"), text_color=color.new(color.lime, 30), text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 2, 15, str.tostring(tp3Price, "#.#"), text_color=color.green, text_size=size.tiny, bgcolor=rowBg)
    else
        // Signal readiness
        signalText = shortOK ? "READY!" : (not drawdownOK ? "DD BLOCK" : "WAITING")
        signalColor = shortOK ? color.lime : (not drawdownOK ? color.red : color.gray)
        table.cell(dashboard, 0, 12, "Signal", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 1, 12, signalText, text_color=signalColor, text_size=size.small, bgcolor=rowBg)
        table.cell(dashboard, 2, 12, "", bgcolor=rowBg)

        // Entry checklist: red bars
        redBarsText = str.tostring(redBarsCount) + "/" + str.tostring(bearMinRedBars)
        redBarsColor = hasEnoughRedBars ? color.green : color.gray
        table.cell(dashboard, 0, 13, "Red Bars", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 1, 13, redBarsText, text_color=redBarsColor, text_size=size.small, bgcolor=rowBg)
        table.cell(dashboard, 2, 13, hasEnoughRedBars ? "OK" : "--", text_color=redBarsColor, text_size=size.small, bgcolor=rowBg)

        // Fear requirement
        table.cell(dashboard, 0, 14, "Fear Req", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 1, 14, str.tostring(fearIndex, "#.#") + " / " + str.tostring(bearMinFear, "#"), text_color=fearOK_bear ? color.green : color.gray, text_size=size.small, bgcolor=rowBg)
        table.cell(dashboard, 2, 14, fearOK_bear ? "OK" : "--", text_color=fearOK_bear ? color.green : color.gray, text_size=size.small, bgcolor=rowBg)

        // Distance ATR
        table.cell(dashboard, 0, 15, "Dist ATR", text_color=color.gray, text_size=size.tiny, bgcolor=rowBg)
        table.cell(dashboard, 1, 15, str.tostring(distATR, "#.#") + " / " + str.tostring(maxDistATR, "#.#"), text_color=distATR <= maxDistATR ? color.green : color.gray, text_size=size.small, bgcolor=rowBg)
        table.cell(dashboard, 2, 15, distATR <= maxDistATR ? "OK" : "--", text_color=distATR <= maxDistATR ? color.green : color.gray, text_size=size.small, bgcolor=rowBg)

